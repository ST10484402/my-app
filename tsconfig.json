{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "jsx": "react-native",  
    "noEmit": true,  
    "resolveJsonModule": true  
  },
  "include": [
    "src/**/*",
    "node_modules/@types/react-native/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
